{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lexico",
  "version": "0.1.0",
  "identifier": "com.user.lexico",
  "build": {
    "beforeDevCommand": "cd ../ui && npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "cd ../ui && npm run build",
    "frontendDist": "../web"
  },
  "app": {
    "windows": [
      {
        "title": "Lexico",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
